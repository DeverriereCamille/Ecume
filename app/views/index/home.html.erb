<div id="content">


	<div>
	  
	  <%= form_for(@message) do |f| %>
		  <div class="field">
		  	<% text_area(:message, :content, cols: 40, rows: 4, id: 'sending_message_input', placeholder: "Enter here these little questions that use to have no answer", autofocus: true) %>
		    <%= f.text_field :content,id: 'sending_message_input', placeholder: "Tape here, this little question in your head that never found answer", autofocus: true %>
		  </div>
		  <div class="actions">
		    <%= f.submit "", id: 'sending_message_button'%>
		  </div>
		<% end %>

	</div>


		<% if @message_to_answer.blank? %>
			<div id="message_notification">
			No messages found
		<% else %>
			<div id="message_notification_new_message">
			New Message received !<br><br>
			<span id="new_message_recieve"><%= @message_to_answer.content %></span>
			<% @message_to_answer.author_id %><br>
			<%= link_to '', message_path(id: @message_to_answer.id,unlocking_key: @conversation_to_answer.unlocking_key), id: 'answer_button' %>
		<% end %>
		<br>
		
	</div>

	<hr>

	<% @message_reasult = Message.ransack().result() %>

	  <%= search_form_for Message.ransack() do |f| %>
		  <%= f.text_field :content_cont, placeholder: 'reasearch in public conversations', id: 'reasearch_field' %>
		  <%= f.submit "", id: 'researching_button' %>
		<% end %>


</div>