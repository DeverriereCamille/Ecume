<div class="pop-up">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <% f.label :email %><br />
      <%= f.email_field :email, autofocus: true , placeholder: "email" %>
    </div>

    <div class="field"><br />
      <% f.label :password %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "password (8 characters minimum)"  %>
    </div>

    <div class="field">
      <% f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder: "password_confirmation" %>
    </div>

    <div class="actions">
      <%= f.submit "", class: 'validation_button' %>
    </div>
  <% end %>

  <% render "devise/shared/links" %>

</div>